---
import Navigation from "./Navigation.astro";
---

<header>
  <div class="header-content">
    <a href="/www.cmussa.org/"><span id="ssa">SSA</span></a>
    <nav>
      <Navigation />
    </nav>
  </div>
</header>
<style>
  header {
    margin: 0;
    padding-top: 0rem;
    background-color: rgba(196, 18, 48, 0.85);
    width: 100%;
  }
  .header-content {
    display: flex;
    align-items: center;
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
  }
  #ssa {
    font-family: "EB Garamond", serif;
    font-size: 2.5rem;
    color: white;
    display: inline-block;
    margin-right: 1.6rem;
    letter-spacing: 0.1rem;
  }
  nav {
    margin-top: 0.2rem;
    font-size: 1.4rem;
    font-weight: 350;
    color: white;
    text-decoration: none;
    display: inline-block
  }
</style>
